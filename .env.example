# TMDB API
# Get your API key from https://www.themoviedb.org/settings/api
EXPO_PUBLIC_TMDB_API_KEY=your_tmdb_api_key
EXPO_PUBLIC_TMDB_ACCESS_TOKEN=your_tmdb_bearer_token

# Firebase
# Get these from your Firebase Console > Project Settings
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# Google OAuth (for Google Sign-In)
# Get these from Google Cloud Console > APIs & Services > Credentials
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_web_client_id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_ios_client_id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_android_client_id.apps.googleusercontent.com

# Google AdMob (for in-app ads)
# Get these from AdMob Console > Apps > App settings / Ad units
# Note: Update app.json with your AdMob App IDs as well
# Set to 'true' for test ads, 'false' for real production ads
EXPO_PUBLIC_USE_TEST_ADS=true

EXPO_PUBLIC_ADMOB_BANNER_PROFILE=ca-app-pub-xxx/profile-banner
EXPO_PUBLIC_ADMOB_BANNER_DETAIL=ca-app-pub-xxx/detail-banner
EXPO_PUBLIC_ADMOB_BANNER_ANALYTICS=ca-app-pub-xxx/analytics-banner
EXPO_PUBLIC_ADMOB_NATIVE_HOME=ca-app-pub-xxx/home-native
EXPO_PUBLIC_ADMOB_NATIVE_WATCHLIST=ca-app-pub-xxx/watchlist-native
EXPO_PUBLIC_ADMOB_INTERSTITIAL_SWIPE=ca-app-pub-xxx/swipe-interstitial
